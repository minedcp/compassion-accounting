<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_invoice_split_wizard_form" model="ir.ui.view">
        <field name="name">invoice.split.wizard.form</field>
        <field name="model">account.invoice.split.wizard</field>
        <field name="arch" type="xml">
            <form string="Invoice Splitting">
                <sheet>
                    <p>Add invoice lines you wish to move to another invoice (click on Add an item...).</p>
                    <field name="move_id" invisible="1"/>
                    <field name="invoice_line_ids" domain="[('move_id', '=', move_id), ('exclude_from_invoice_tab', '=', False)]">
                        <tree editable="bottom" delete="false">
                            <field name="product_id" readonly="1"/>
                            <field name="name" readonly="1"/>
                            <field name="account_id" readonly="1"/>
                            <field name="quantity" readonly="1"/>
                            <field name="price_unit" readonly="1"/>
                            <field name="price_subtotal" readonly="1"/>
                        </tree>
                    </field>
                    <group string="Journal Items" invisible="1">
                        <field name="line_ids" invisible="1">
                            <tree>
                                <field name="account_id"/>
                                <field name="name"/>
                                <field name="debit"/>
                                <field name="credit"/>
                                <field name="balance"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="split_invoice" type="object" string="Split Invoice" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Act Window for Wizard -->
    <record id="action_split_invoice_wizard" model="ir.actions.act_window">
        <field name="name">Split invoice</field>
        <field name="binding_model_id" ref="account.model_account_move" />
        <field name="binding_view_types">form</field>
        <field name="view_id" ref="view_invoice_split_wizard_form"/>
        <field name="res_model">account.invoice.split.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
